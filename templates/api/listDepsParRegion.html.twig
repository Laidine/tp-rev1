{% extends 'base.html.twig' %}

{% block title %}Liste des départements par region{% endblock %}

{% block body %}
<div class="container">
<form action="" method="GET">
<div class="row">
        <div class="col-md-10">
            <div class="form_group">
                <select name="region" id="region">
                    <option value="Toutes">Toutes les régions</option>
                    {% for maRegion in mesRegions %}
                        <option value="{{maRegion.code}}">{{maRegion.nom}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
</div>

</form>
<h1>Liste des départements</h1>
 <div class="row">
 
 {% for monDep in mesDeps %}
 <div class="col-3">
    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
        <div class="card-header">{{monDep.code}}</div>
        <div class="card-body">
        <h4 class="card-title">{{mesDeps.nom}}</h4>  
        </div>
        </div>
    </div>  
    {% endfor %}
    
 </div>
</div>
{% endblock %}
